.healthbar_-u-i {
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.healthbar-background{
    background-color: rgb(255, 255, 255);
    border-color: rgb(209, 37, 37);
    border-radius: 20px;
    border-width: 2px;

    width: 300px;
    height: 30px;

    flex-shrink: 0;
}

.healthbar-foreground{
    background-color: rgb(255, 87, 87);
    border-radius: 5px;

    width: 100px;
    height: 100%;
}